{
  "version": 2,
  "buildCommand": "node build-static.js",
  "outputDirectory": "dist-static",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!assets/|favicon|generated-icon|og-default).*)",
      "destination": "/index-static.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(favicon\\.ico|favicon\\.svg|generated-icon\\.png|og-default-image\\.svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  "functions": {
    "client/src/lib/supabase-api-direct.ts": {
      "runtime": "nodejs18.x"
    }
  }
}