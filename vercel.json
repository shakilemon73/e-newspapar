{
  "buildCommand": "npm run build:static",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  
  "headers": [
    {
      "source": "/(.*\\.(?:js|css|png|jpg|jpeg|gif|ico|svg|woff2?))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}